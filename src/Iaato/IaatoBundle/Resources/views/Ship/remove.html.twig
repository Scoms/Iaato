{% extends '::base.html.twig' %}

{% block body %}

<div class="well">

<ul class="nav nav-pills">
	<a class="btn btn-info" href="{{ path('iaato_ship') }}">Show ships</a>
	<a class="btn btn-info" href="{{ path('iaato_ship_add') }}">Add a ship</a>
	<a class="btn btn-info" href="{{ path('iaato_ship_remove') }}">Remove a ship</a>
</ul>

{% if error != '' %}
	<div class="alert alert-error">
		<p data-dismiss="alert">{{ error }}</p>
  	</div>
{% endif %}

{% if success != '' %}
  	<div class="alert alert-success">
		<p data-dismiss="alert">{{ success }}</p>
  	</div>
{% endif %}

<div class="well" style="width:60%; margin-left:auto; margin-right:auto; heigth:200px;">
	<form method="post" {{ form_enctype(form) }} class="form">
	    {{ form_errors(form) }}
	    {{ form_rest(form) }}
	    <input type="submit" value="Remove" class="btn btn-danger" />
	</form>
</div>

</div>

{% endblock %}
