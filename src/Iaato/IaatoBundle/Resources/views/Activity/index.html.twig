
{% extends '::base.html.twig' %}

{% block body %}

<div class="well">

<ul class="nav">
	<a class="btn btn-info" href="{{ path('iaato_activity') }}" >Show</a>
	<a class="btn btn-info" href="{{ path('iaato_activity_add') }}" >Add</a>	
	<a class="btn btn-info" href="{{ path('iaato_activity_remove') }}" >Remove</a>
</ul>

<table class="table table-hover table-bordered" style="width: 40%;background-color:white;">
	<thead style="background-color:#49afcd">
		<tr>
  			<th style="color:iophyjkb">Activities</th>
		</tr>
	</thead>

	<tbody>
		{% for activity in activities %}
  			<tr>
    			<td><p>{{ activity.labelActivity }}</p></td>
  			</tr>
  		{% else %}
  			<p>No activities</p>
		{% endfor %}
	</tbody>
</table>

</div>

{% endblock %}
