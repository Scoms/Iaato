jms_security_extra:
    secure_all_services: false
    expressions: true

security:
    encoders:
        Symfony\Component\Security\Core\User\User: plaintext
        Iaato\UserBundle\Entity\User: md5

    role_hierarchy:
        ROLE_ADMIN:       [ROLE_CAPITAINE,ROLE_SECRETARIAT]
        ROLE_SUPER_ADMIN: [ROLE_ADMIN, ROLE_ALLOWED_TO_SWITCH]

    providers:
        in_memory:
            memory:
                users:
                    capitaine: {password: capitainepass, roles: [ 'ROLE_CAPITAINE' ] }
                    secretariat:  { password: secretariatpass, roles: [ 'ROLE_SECRETARIAT' ] }
                    admin: { password: adminpass, roles: [ 'ROLE_SUPER_ADMIN' ] }
        main:
            entity: { class: Iaato\UserBundle\Entity\User, property: username }

    firewalls:
        dev:
            pattern:  ^/(_(profiler|wdt)|css|images|js)/
            security: false
#        main_login:
#            pattern: /login 
#            anonymous: true
        
        main:
            pattern: ^/
            anonymous: true
            provider : main
            form_login:
                login_path: login
                check_path: login_check
            logout:
                path: /logout
                target: /home
            
            
    access_control:
#- { path: ^/login, roles: IS_AUTHENTICATED_ANONYMOUSLY, requires_channel: https }
